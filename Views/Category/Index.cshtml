@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class = "col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class=" col-6 text-end">
            <a asp-controller="Category" asp-action = "Create" class="btn btn-primary">Create New Category</a>
        </div>
        
    </div>
</div>
<br/>
<table class= "table table-borderd table-striped" style ="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Orderd Date & Time
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="35%" >
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td width="35%">
                    @obj.CreatedDateTime
                </td>
            </tr>
        }
    </tbody>
</table>
